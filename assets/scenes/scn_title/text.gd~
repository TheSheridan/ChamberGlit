#+==================================================+#
extends Label

var time=0
@export var txt="Blank Realm"

func _ready():
	position=Vector2(640,20)

	modulate=Color(1,1,1,1)
#	modulate=Color(1,1,1,0)

func _process(delta):
	time+=1
	text=txt
	if time==1:   Anim_FadeIn()
	if time==140: Anim_FadeOut()

func Anim_FadeIn():
	var tw =create_tween()
	var tw2=create_tween()

	tw.set_ease(Tween.EASE_OUT)
	tw.set_trans(Tween.TRANS_BOUNCE)
	tw.tween_property(self,"position",Vector2(20,20),1)

#	tw2.tween_property(self,"modulate",Color(1,1,1),0.5)
func Anim_FadeOut():
	var tw= create_tween()
	var tw2=create_tween()

	tw.set_ease(Tween.EASE_IN)
	tw.set_trans(Tween.TRANS_QUAD)
	tw.tween_property(self,"position",Vector2(-640,20),1)
	
#	tw2.set_ease(Tween.EASE_IN)
#	tw2.set_trans(Tween.TRANS_SINE)
#	tw2.tween_property(self,"modulate",Color(1,1,1,0),1)

