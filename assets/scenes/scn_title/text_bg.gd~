#+==================================================+#
extends ColorRect

var timer=0

#
func _ready():
	position=Vector2(0,16)
	size=Vector2(0,0)

func _process(delta):
	timer+=1
	if timer==1:   Anim_In()
	if timer==140: Anim_Out()
#
func Anim_In():
	var tw1=create_tween()
	tw1.set_ease(Tween.EASE_IN_OUT)
	tw1.set_trans(Tween.TRANS_QUART)
	tw1.tween_property(self,"size",Vector2(640,45),1)
func Anim_Out():
	var tw1=create_tween()
	var tw2=create_tween()

	tw1.set_ease(Tween.EASE_IN_OUT)
	tw1.set_trans(Tween.TRANS_EXPO)
	tw1.tween_property(self,"size",Vector2(0,0),1)
	
	tw2.set_ease(Tween.EASE_IN_OUT)
	tw2.set_trans(Tween.TRANS_EXPO)
	tw2.tween_property(self,"position",Vector2(640,16+45),1)
